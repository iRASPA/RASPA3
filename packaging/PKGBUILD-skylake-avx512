# Maintainer: David Dubbeldam <d.dubbeldam@uva.nl>
pkgname=raspa
pkgver=3.0.6
pkgrel=1
pkgdesc="Molecular simulation code for adsorption and diffusion in nanoporours materials."
arch=('x86_64')
url="https://www.iraspa.org"
license=('MIT')
makedepends=()
depends=('glibc' 'blas64' 'lapack64' 'gcc-libs' 'openmp')
source=(raspa3.tar.gz)
md5sums=('SKIP')

build() {
  cmake -B build --preset linux-x86_64-skylake-avx512-archlinux -DCMAKE_INSTALL_PREFIX=${pkgdir}/usr -DCMAKE_POLICY_VERSION_MINIMUM=3.5 
  cmake --build build
}

package() {
  cmake --install build 
}

